</div>

<span></span>
<div class="col-sm-12">
    <button type="button" class="btn btn-primary">Maths</button>
    <button type="button" class="btn btn-primary">Physics</button>
    <button type="button" class="btn btn-primary">Chemistry</button>
</div>
</div>













 
      <!-- CSS -->
      <style>

            .ui-widget-header,.ui-state-default, ui-button{
            background:#012d4d;
            border: 1px solid white;
            text-align:center;
            color: white  ;
            font-size:150%;
            }
            #contactus,#signin{
              background: white;
              text-align: center;
            }
      </style>
      <!-- Javascript -->
      <script>
         $(function() {
            $( "#contactus" ).dialog({
               autoOpen: false, 
               hide: "puff",
               modal: true,
               show : "slide",
               height:460,
               width:350  
            });
            $( "#opener-3" ).click(function() {
               $( "#contactus" ).dialog( "open" );
            });
         });
         $(function() {
            $( "#signin" ).dialog({
               autoOpen: false, 
               hide: "puff",
               modal: true,
               show : "slide",
               height:330,
               width:300  
            });
            $( "#opener-4" ).click(function() {
               $( "#signin" ).dialog( "open" );
            });
         });

      </script>